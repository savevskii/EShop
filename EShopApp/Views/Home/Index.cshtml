@model IEnumerable<EShopApp.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-3">
        <h3 style="text-align:center;">EShop</h3>
        <img class="img-responsive" src="~/Images/logo.svg" style="width:250px; height:200px" />
    </div>
    <div class="col-9">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://i.pinimg.com/originals/a5/6b/7e/a56b7ee712153a34ca63fb6b6d2f4cbf.jpg?fbclid=IwAR2t7W_UARwz6ILDqsgJsLmWABXAALLCIJ-oidoTOgZq5ZVKZ6wy9fD8S_c" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://review.gbtcdn.com/upload/gearbest/review/20200417/B91FA10AE55B8CD882FC43E9D9BBBED8.jpg?fbclid=IwAR2Cn2oqlT0_yVu4SZ-DRJv_BTd-xCrXlYbw20FeMLjUbP8V5x414dZ4f5M" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.musictech.net/wp-content/uploads/2018/06/Mixcder-E7-Featured.jpg?fbclid=IwAR1WIlfFwAqMA7X9iYRIuqcNfa_705J35HuFzCNewvaNsfzdrwmXMLTOCFo" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <h3 class="mt-2">Products On Sale</h3>
        <div class="row my-4">
            @foreach (var item in Model)
            {
                <div class="col-4 my-2">
                    <div class="card h-100">
                        <img src="@item.ImagePath" class="card-img-top img-thumbnail img-rounded" alt="Electronics">
                        <div class="card-body">
                            <h5 class="card-title">
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </h5>
                            <p class="card-text"><strong>$@item.UnitPrice</strong></p>
                            <p class="card-text">Short description about product.</p>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-outline-info">
                                @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = item.ProductID }, "")
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>